          <ul>
            <li><%= link_to 'Charlas', encuentro_charlas_path(encuentro) %></li>
            <li><%= link_to 'Conciertos', encuentro_conciertos_path(encuentro) %></li>
            <li><%= link_to 'Ensayos', encuentro_ensayos_path(encuentro) %></li>
            <li><%= link_to 'Exponentes', encuentro_exponentes_path(encuentro) %></li>
          </ul>
        <% end %>
      </li>
    <% end %>
    <li><%= link_to 'Crear Encuentro', new_encuentro_path, class: 'button' %></li>
  </ul>
</aside>