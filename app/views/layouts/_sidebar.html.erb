<aside class="menu">
  <p class="menu-label">
    General
  </p>
  <ul class="menu-list">
    <li>
      <a>Mi cuenta</a>
    </li>
    <li>
      <a>Usuarios</a>
    </li>
  </ul>
  <p class="menu-label">
    Encuentros
  </p>
  <ul class="menu-list">
    <% @encuentros.each do |encuentro| %>
      <li>
        <%= link_to encuentro.version, edit_encuentro_path(encuentro) %>
