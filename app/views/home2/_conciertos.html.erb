<section class="hero is-fullheight-with-navbar" id="conciertos">
  <div class="hero-body">
    <div class="container is-fluid has-text-centered">
      <h1 class="title is-1">Conciertos
        <%= @encuentro.version %></h1>
      <div class="columns is-multiline is-mobile">
        <% @encuentro.conciertos_por_fecha.each do |fecha, conciertos|%>
          <div class="column is-4">
            <div class="card" style="height:100%">
              <header class="card-header">
                <p class="card-header-title title is-centered">
                  <%= conciertos.first.fecha_display %>
                </p>
              </header>
              <div class="card-content">
                <% conciertos.each do |c| %>
                  <div class="container-concierto">
                    <div class="container-concierto-texto">
                      <p class="has-text-left has-text-weight-bold"><%= link_to c.compositor, concierto_path(c) %></p>
                      <p class="has-text-left is-marginless">
                        <em><%= c.titulo %></em>
                      </p>
                      <%#= simple_format(c.interpretes, class: 'has-text-left') %>
                      </div>
                      <div class="container-concierto-links">
                        <%= link_to icon('fas', 'video'), c.video_url, target: '_blank' if c.tiene_video? %>
                        <%= link_to icon('fas', 'images'), concierto_fotos_path(c), class: 'button', target: '_blank' if c.fotos.attached? %>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </section>
