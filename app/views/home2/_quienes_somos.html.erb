<section class="hero is-fullheight-with-navbar" id="quienes-somos">
  <div class="hero-body">
    <div class="container is-fluid has-text-centered">
      <h1 class="title is-1">Quienes Somos</h1>
      <div class="columns is-multiline is-mobile is-centered">
        <div class="column is-3">
          <div class="card" style="height:100%">
            <div class="card-image">
              <% if @encuentro.foto_quienes_somos.attached? %>
                <figure class="image is-square">
                  <%= image_tag @encuentro.foto_quienes_somos.variant( combine_options: { thumbnail: '660x660^', gravity: 'east', extent: '660x660' } ), class: 'is-square' %>
                </figure>
              <% end %>
            </div>
            <div class="card-content">
              <div class="media">
                <div class="media-content">
                  <p class="title is-4"><%= @encuentro.titulo_quienes_somos %></p>
                </div>
              </div>
              <div class="content has-text-left">
                <%= simple_format(truncate(@encuentro.cuerpo_quienes_somos, length: 400, separator: '')) %>
                <p><%= link_to 'Ver más', ver_quienes_somos_path(@encuentro) %></p>
              </div>
            </div>
          </div>
        </div>

        <div class="column is-3">
          <div class="card" style="height:100%">
            <div class="card-image">
              <% if @encuentro.foto_coordinador.attached? %>
                <figure class="image is-square">
                  <%= image_tag @encuentro.foto_coordinador.variant( combine_options: { thumbnail: '660x660^', gravity: 'north', extent: '660x660' } ), class: 'is-square' %>
                </figure>
              <% end %>
            </div>
            <div class="card-content">
              <div class="media">
                <div class="media-content">
                  <p class="title is-4"><%= @encuentro.nombre_coordinador %></p>
                </div>
              </div>
              <div class="content has-text-left">
                <%= simple_format(truncate(@encuentro.bio_coordinador, length:  400, separator: '')) %>
                <p><%= link_to 'Ver más', ver_coordinador_path(@encuentro) %></p>
              </div>
            </div>
          </div>
        </div>
        <div class="column is-6">
          <%= image_tag 'dodecagono_web.svg', style: 'width: 100%' %>
        </div>
      </div>
    </div>
  </div>
</section>
