<div class="field is-horizontal">
    <div class="field-label is-normal"></div>
    <div class="field-body">
        <div class="field">
            <div class="control">
                <h3 class="title is-3">Promocional</h3>
            </div>
        </div>
    </div>
</div>

<div class="field is-horizontal">
  <div class="field-label is-normal">
    <%= form.label :banner, class: 'label' %>
  </div>
  <div class="field-body">
    <div class="field">
      <div class="control">
        <% if @encuentro.banner_promocional.attached? %>
        <%= image_tag @encuentro.banner_promocional.variant(
          combine_options: {
            resize: '400',
            crop: '400x400+0+0',
            gravity: 'north'
          }
        ), class: 'is-square' %>
        <% end %>
      </div>

      <% unless 'show' == params[:action] %>
      <div class="control">
        <div class="file">
          <label class="file-label">
            <%= form.file_field :banner_promocional, class: 'file-input' %>
            <span class="file-cta">
              <span class="file-icon">
                <i class="fas fa-upload"></i>
              </span>
              <span class="file-label">
                Examinar
              </span>
            </span>
          </label>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

<div class="field is-horizontal">
  <div class="field-label is-normal">
  </div>
  <div class="field-body">
    <div class="field">
      <div class="control">
        <label class="checkbox" %>
          <%= form.check_box :mostrar_promocional, class: 'checkbox' %>
          Mostrar promocional
        </label>
      </div>
    </div>
  </div>
</div>
