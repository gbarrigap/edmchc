<div class="field is-horizontal">
  <div class="field-label is-normal"></div>
  <div class="field-body">
    <div class="field">
      <div class="control">
        <h3 class="title is-3">Imágenes de Prensa</h3>
      </div>
    </div>
  </div>
</div>

<div class="field is-horizontal">
  <div class="field-label is-normal"></div>
  <div class="field-body">
    <div class="field">
      <div class="control previews-container">
        <div class="previews">
          <% if @encuentro.imagenes_prensa.attached? %>
            <% @encuentro.imagenes_prensa.each do |f| %>
              <span class="image-preview">
                <%= image_tag f.variant( combine_options: { resize: '250', crop: '250x250+0+0', gravity: 'north' } ), class: 'is-square' %>
                <%= link_to icon('fas', 'trash has-text-danger'), attachment_path(f), { method: 'delete', remote: true, data: { confirm: 'Esta acción es irreversible. ¿Desea continuar?' } } %>
              </span>
            <% end %>
          <% end %>

          <% unless 'show' == params[:action] %>
            <div class="control">
              <div class="file">
                <label class="file-label">
                  <%= form.file_field :imagenes_prensa, multiple: true, class: 'file-input' %>
                  <span class="file-cta">
                    <span class="file-icon">
                      <i class="fas fa-upload"></i>
                    </span>
                    <span class="file-label">
                      Examinar
                    </span>
                  </span>
                </label>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
