<section class="hero is-fullheight" id="exponentes">
  <div class="hero-body">
    <div class="container is-fluid has-text-centered">
      <h1 class="title is-1">Coordinador</h1>
      <div class="columns is-multiline is-mobile">
          <div class="column is-6">
            <div class="card" style="height:100%">
              <div class="card-image">
                <% if (@encuentro.foto_coordinador.attached?) %>
                  <figure class="image is-square">
                    <%= image_tag @encuentro.foto_coordinador.variant( combine_options: { thumbnail: '400x400^', gravity: 'north', extent: '400x400' } ), class: 'is-square' %>
                  </figure>
                <% end %>
              </div>
              <div class="card-content">
                <div class="media">
                  <div class="media-content">
                    <p class="title is-4"><%= @encuentro.nombre_coordinador %></p>
                  </div>
                </div>
                <div class="content has-text-left">
                  <%= simple_format(@encuentro.bio_coordinador) %>
                </div>
              </div>
            </div>
          </div>
          <div class="column is-6">
            <%= image_tag 'dodecagono_web.svg', style: 'width: 100%' %>
          </div>
      </div>
    </div>
  </div>
</section>
